# Copy this file to .env and fill values for local development
# Do NOT commit your real credentials to source control

# MongoDB connection string (Atlas recommended). Example:
# MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/buymeacoffee?retryWrites=true&w=majority
MONGODB_URI=

# Cloudinary credentials (optional, required for uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Local dev server port (optional)
PORT=5001

# Production API base URL for frontend builds (optional)
VITE_API_BASE_URL=
# MongoDB Atlas Connection String
# Get this from your MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/buymeacoffee?retryWrites=true&w=majority

# API Base URL (will be set automatically by Vercel)
VITE_API_BASE_URL=
